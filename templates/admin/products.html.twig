{% extends 'base.html.twig' %} {% block title %}Gestion des produits{% endblock
%} {% block body %}

<diV class="container my-5">
  <h2 class="text-center text-white bg-dark title mx-auto">
    Tous les produits en base de donnée
  </h2>

  <div class="row justify-content-center">
    <a
      href="{{ path('app_admin_products_create') }}"
      class="btn btn-primary mx-auto my-5"
      >Ajouter un article</a
    >
  </div>
  <table class="table table-stripper">
    <tr>
      {% for row in colonnes %}
      <th>{{ row }}</th>
      {% endfor %}
      <th>category</th>
      <th>action</th>
    </tr>
    {% for p in products %}
    <tr class="text-center">
      <td class="align-middle">{{ p.id }}</td>
      <td class="align-middle">{{ p.title }}</td>
      <td class="align-middle">{{ p.content }}</td>
      <td class="align-middle">{{ p.price }} €</td>
      <td class="align-middle">
        <img
          class="img-fluid"
          src="{{ asset('uploads/images/') }}{{ p.picture }}"
        />
      </td>
      <td class="align-middle">{{ p.category.name }}</td>
      <td class="align-middle">
        <a
          class="btn mx-auto justify-content-center btn-warning mb-2"
          href="{{ path('app_admin_products_edit', { id: p.id }) }}"
          ><i class="fa-solid fa-pen-to-square"></i
        ></a>
        <a
          class="btn mx-auto justify-content-center btn-danger"
          href="{{ path('app_admin_products_delete', { id: p.id }) }}"
          ><i class="fa-solid fa-trash"></i
        ></a>
      </td>
    </tr>
    {% endfor %}
  </table>
</diV>

{% endblock %}
